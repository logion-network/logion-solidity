{
  "name": "@logion/solidity",
  "description": "Logion Smart Contract library for Solidity",
  "version": "0.1.0-3",
  "files": [
    "**/*.sol",
    "/artifacts/contracts/**/*.json"
  ],
  "packageManager": "yarn@3.2.3",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/logion-network/logion-solidity.git"
  },
  "bugs": {
    "url": "https://github.com/logion-network/logion-solidity/issues"
  },
  "author": "Logion Team",
  "license": "Apache-2.0",
  "scripts": {
    "build": "yarn hardhat compile",
    "clean": "yarn hardhat clean",
    "test": "yarn hardhat test",
    "generate-sample-metadata": "ts-node -P tsconfig-scripts.json scripts/generate_metadata.mts",
    "import-sample-items": "ts-node -P tsconfig-scripts.json scripts/import_items.mts",
    "import-items-test": "ts-node -P tsconfig-scripts.json scripts/import_items_test.mts"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@logion/client": "^0.29.0",
